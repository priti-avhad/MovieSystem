<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Movies</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #eef2f7;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }

      .header {
        background: linear-gradient(to right, #6a11cb, #2575fc);
        border-radius: 1rem;
        padding: 2rem 1rem;
        color: white;
        text-align: center;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
      }

      .header::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(
          circle,
          rgba(255, 255, 255, 0.1) 20%,
          transparent 70%
        );
        animation: shine 10s linear infinite;
      }

      @keyframes shine {
        from {
          transform: rotate(0deg);
        }
        to {
          transform: rotate(360deg);
        }
      }

      .movie-card {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        background-color: #fff;
        display: flex;
        flex-direction: column;
        height: 100%;
      }

      .movie-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
      }

      .movie-poster {
        height: 320px;
        object-fit: cover;
        width: 100%;
      }

      .card-body {
        padding: 1rem;
      }

      .movie-meta {
        font-size: 0.85rem;
        color: #666;
      }

      .btn-sm {
        margin: 2px;
      }

      .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(101, 117, 255, 0.25);
        border-color: #6575ff;
      }

      .alert-warning {
        background-color: #fff3cd;
        border: 1px solid #ffeeba;
      }
    </style>
  </head>
  <body>
    <div class="container my-4">
      <!-- Header Banner -->
      <div class="header">
        <h2><i class="bi bi-film"></i> View All Movies</h2>
        <p>
          Discover, filter, and explore your favorite movies from our
          collection.
        </p>
      </div>

      <!-- Search Form -->
      <form action="/viewmovies" method="GET" class="row g-3 mb-4">
        <div class="col-md-10">
          <input
            type="text"
            name="search"
            value="<%= typeof search !== 'undefined' ? search : '' %>"
            class="form-control form-control-lg"
            placeholder="🔍 Search movies by title..."
          />
        </div>
        <div class="col-md-2 d-grid">
          <button type="submit" class="btn btn-outline-primary btn-lg">
            <i class="bi bi-search"></i> Search
          </button>
        </div>
      </form>

      <!-- Movie List -->
      <% if (movies.length > 0) { %>
      <p class="text-muted mb-4">Showing <%= movies.length %> movie(s)</p>
      <div class="row g-4">
        <% movies.forEach(movie => { %>
        <div class="col-md-4">
          <div class="movie-card">
            <img
              src="<%= movie.posterurl %>"
              class="movie-poster"
              alt="<%= movie.title %> Poster"
            />
            <div class="card-body">
              <h5 class="card-title text-primary fw-bold">
                <%= movie.title %>
              </h5>
              <p class="movie-meta">
                <strong>Genre:</strong> <%= movie.genre %>
              </p>
              <p class="movie-meta">
                <strong>Language:</strong> <%= movie.language %>
              </p>
              <p class="movie-meta">
                <strong>Country:</strong> <%= movie.country %>
              </p>
              <p class="movie-meta">
                <strong>Director:</strong> <%= movie.director %>
              </p>

              <div class="d-flex flex-wrap mb-2">
                <% if (movie.trailerurl &&
                movie.trailerurl.startsWith('http')) { %>
                <a
                  href="<%= movie.trailer_url %>"
                  class="btn btn-sm btn-outline-warning"
                  target="_blank"
                >
                  <i class="bi bi-play-btn-fill"></i> Trailer
                </a>
                <% } %> <% if (movie.movieurl) { %>
                <a
                  href="<%= movie.movieurl %>"
                  class="btn btn-sm btn-outline-success"
                  target="_blank"
                >
                  <i class="bi bi-film"></i> Watch
                </a>
                <% } %> <% if (movie.posterurl) { %>
                <!-- <a
                  href="<%= movie.posterurl %>"
                  class="btn btn-sm btn-outline-info"
                  target="_blank"
                >
                  <i class="bi bi-image"></i> Poster
                </a>
                <% } %> -->
              </div>

              <p class="movie-meta">
                <strong>Release Date:</strong> <%= movie.releasedate ?
                movie.releasedate.toISOString().split('T')[0] : 'N/A' %><br />
                <strong>Runtime:</strong> <%= movie.runtime %> mins<br />
                <strong>Budget:</strong> $<%= movie.budget ?
                movie.budget.toLocaleString() : 'N/A' %><br />
                <strong>Revenue:</strong> $<%= movie.revenue ?
                movie.revenue.toLocaleString() : 'N/A' %>
              </p>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <div class="alert alert-warning text-center mt-4">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> No movies found
        matching your criteria.
      </div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
