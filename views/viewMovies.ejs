<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>All Movies</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center mb-4">All Movies</h2>

    <!-- Search Form -->
    <form action="/viewmovies" method="GET" class="mb-3">
      <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Search by title (optional)">
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </form>

    <% if (movies.length > 0) { %>
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Genre</th>
            <th>Director</th>
            <th>Languages</th>
            <th>Country</th>
            <th>Budget</th>
            <th>Revenue</th>
            <th>Runtime</th>
            <th>Poster</th>
            <th>Trailer</th>
            <th>Movie</th>
            <th>Created At</th>
            <th>Updated At</th>
          </tr>
        </thead>
        <tbody>
          <% movies.forEach(movie => { %>
            <tr>
              <td><%= movie.id %></td>
              <td><%= movie.title %></td>
              <td><%= movie.description %></td>
              <td><%= movie.genre %></td>
              <td><%= movie.director %></td>
              <td><%= movie.languages %></td>
              <td><%= movie.country %></td>
              <td><%= movie.budget %></td>
              <td><%= movie.revenue %></td>
              <td><%= movie.runtime %></td>
              <td><a href="<%= movie.posterUrl %>" target="_blank">Poster</a></td>
              <td><a href="<%= movie.trailerUrl %>" target="_blank">Trailer</a></td>
              <td><a href="<%= movie.movieUrl %>" target="_blank">Movie</a></td>
              <td><%= movie.created_at.toISOString().split("T")[0] %></td>
              <td><%= movie.updated_at.toISOString().split("T")[0] %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <div class="alert alert-warning text-center">
        No movies found in the database.
      </div>
    <% } %>
  </div>
</body>
</html>
