<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login - Movie Recommendation System</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background: url('https://images.unsplash.com/photo-1605648916319-0aa6e1973f36?auto=format&fit=crop&w=1400&q=80') no-repeat center center fixed;
      background-size: cover;
    }

    .login-card {
      background-color: rgba(30, 60, 90, 0.9);
      color: #ffffff;
    }

    .form-control {
      background-color: #f8f9fa;
      color: #212529;
    }

    .form-control::placeholder {
      color: #6c757d;
    }

    .input-group-text {
      background-color: #dee2e6;
    }

    .btn-outline-secondary {
      background-color: #f8f9fa;
      color: #212529;
    }

    .btn-outline-secondary:hover {
      background-color: #e2e6ea;
    }

    .btn-success {
      font-size: 0.9rem;
    }
  </style>
</head>
<body class="d-flex align-items-center justify-content-center vh-100">

  <div class="card login-card p-4 shadow-lg border-0 rounded-4" style="max-width: 400px; width: 100%;">
    <h3 class="text-center mb-4 text-white">
      <i class="bi  me-2 text-success"></i>User Login
    </h3>

    <form action="/login" method="POST">
      <!-- Username -->
      <div class="mb-3">
        <label for="username " class="form-label fw-semibold text-white">Username</label>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-person text-primary"></i></span>
          <input type="text" id="username" name="username" class="form-control" placeholder="Enter your username" required>
        </div>
      </div>

      <!-- Password -->
      <div class="mb-3">
        <label class="form-label fw-semibold text-white">Password</label>

        <!-- Hidden Password Field -->
        <div id="pwd-hidden" class="input-group">
          <span class="input-group-text"><i class="bi bi-lock text-danger"></i></span>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required>
          <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#pwd-visible #pwd-hidden">
            <i class="bi bi-eye text-dark"></i>
          </button>
        </div>

        <!-- Visible Password Field -->
        <div id="pwd-visible" class="collapse input-group mt-2">
          <span class="input-group-text"><i class="bi bi-unlock text-warning"></i></span>
          <input type="text" class="form-control" placeholder="Enter your password (visible)">
          <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#pwd-hidden #pwd-visible">
            <i class="bi bi-eye-slash text-dark"></i>
          </button>
        </div>
      </div>

      <!-- Login Button -->
      <div class="d-grid mb-3">
        <button type="submit" class="btn btn-success">
          <i class="bi bi-box-arrow-in-right me-1 text-white"></i>Login
        </button>
      </div>
    </form>

    <!-- Register Link -->
    <p class="text-center text-light">
      <i class="bi bi-question-circle me-1 text-light"></i>Don't have an account?
      <a href="/register" class="text-warning text-decoration-none">
        <i class="bi bi-person-plus-fill me-1 text-warning"></i>Register here
      </a>
    </p>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
