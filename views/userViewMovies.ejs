<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Movies</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #eef2f7;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }

      .header {
        background: linear-gradient(to right, #6a11cb, #2575fc);
        border-radius: 1rem;
        padding: 2rem 1rem;
        color: white;
        text-align: center;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
      }

      .header::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(
          circle,
          rgba(255, 255, 255, 0.1) 20%,
          transparent 70%
        );
        animation: shine 10s linear infinite;
      }

      @keyframes shine {
        from {
          transform: rotate(0deg);
        }
        to {
          transform: rotate(360deg);
        }
      }

      .movie-card {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        background-color: #fff;
        display: flex;
        flex-direction: column;
        height: 100%;
      }

      .movie-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
      }

      .movie-poster {
        height: 320px;
        object-fit: cover;
        width: 100%;
      }

      .movie-meta {
        font-size: 0.85rem;
        color: #666;
      }

      .btn-sm {
        margin: 2px;
      }

      .rating-modal {
        display: none;
        opacity: 0;
        position: fixed;
        z-index: 9999;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.7);
        align-items: center;
        justify-content: center;
        transition: opacity 0.3s ease;
      }

      .rating-modal.show {
        display: flex;
        opacity: 1;
      }

      .rating-container {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        border-radius: 25px;
        padding: 40px;
        box-shadow: 0 0 40px rgba(255, 255, 255, 0.15),
          0 4px 30px rgba(0, 0, 0, 0.3);
        width: 100%;
        max-width: 600px;
        color: white;
        position: relative;
      }

      .close-btn {
        position: absolute;
        top: 20px;
        right: 30px;
        font-size: 1.5rem;
        cursor: pointer;
        color: #fff;
      }

      .star-rating {
        direction: rtl;
        display: flex;
        justify-content: center;
        gap: 5px;
        font-size: 2rem;
        margin-bottom: 20px;
      }

      .star-rating input[type="radio"] {
        display: none;
      }

      .star-rating label {
        color: #777;
        cursor: pointer;
        transition: transform 0.2s, color 0.2s;
      }

      .star-rating input[type="radio"]:checked ~ label,
      .star-rating label:hover,
      .star-rating label:hover ~ label {
        color: #ffc107;
        text-shadow: 0 0 10px #ffc107;
        transform: scale(1.1);
      }

      .btn-submit {
        background: linear-gradient(to right, #00b09b, #96c93d);
        border: none;
        width: 100%;
        padding: 12px;
        font-weight: bold;
        border-radius: 10px;
        font-size: 1rem;
      }

      .btn-submit:hover {
        background: linear-gradient(to right, #96c93d, #00b09b);
      }
    </style>
  </head>

  <body>
    <div class="container my-4">
      <div class="header">
        <h2><i class="bi bi-film"></i> View All Movies</h2>
        <p>
          Discover, filter, and explore your favorite movies from our
          collection.
        </p>
      </div>

      <div class="row g-3 mb-4 align-items-center">
        <div class="col-md-3">
          <select class="form-select form-select-lg" id="searchFilter">
            <option value="title" selected>Search by Title</option>
            <option value="genre">Search by Genre</option>
            <option value="language">Search by Language</option>
            <option value="director">Search by Director</option>
          </select>
        </div>
        <div class="col-md-9">
          <input
            type="text"
            id="searchInput"
            class="form-control form-control-lg"
            placeholder="ðŸ” Start typing to search..."
          />
        </div>
      </div>

      <% if (movies.length > 0) { %>
      <p class="text-muted mb-4">Showing <%= movies.length %> movie(s)</p>
      <div class="row g-4" id="movieContainer">
        <% movies.forEach(movie => { %>
        <div class="col-md-4 movie-wrapper">
          <div class="movie-card">
            <img
              src="<%= movie.posterurl %>"
              class="movie-poster"
              alt="<%= movie.title %> Poster"
            />
            <div class="card-body">
              <p class="movie-meta">
                <strong>Title:</strong>
                <span class="movie-title"><%= movie.title %></span>
              </p>
              <p class="movie-meta">
                <strong>Genre:</strong> <%= movie.genre %>
              </p>
              <p class="movie-meta">
                <strong>Language:</strong> <%= movie.language %>
              </p>
              <p class="movie-meta">
                <strong>Country:</strong> <%= movie.country %>
              </p>
              <p class="movie-meta">
                <strong>Director:</strong> <%= movie.director %>
              </p>

              <div class="d-flex flex-wrap mb-2">
                <% if (movie.trailerurl?.startsWith('http')) { %>
                <a
                  href="<%= movie.trailerurl %>"
                  class="btn btn-sm btn-outline-warning"
                  target="_blank"
                  ><i class="bi bi-play-btn-fill"></i> Trailer</a
                >
                <% } %> <% if (movie.movieurl) { %>
                <a
                  href="<%= movie.movieurl %>"
                  class="btn btn-sm btn-outline-success"
                  target="_blank"
                  ><i class="bi bi-film"></i> Watch</a
                >
                <% } %>
                <button
                  class="btn btn-sm btn-outline-primary"
                  onclick="openRating('<%= movie.mid %>')"
                >
                  <i class="bi bi-star-fill"></i> Rating & Review
                </button>
              </div>

              <p class="movie-meta">
                <strong>Release Date:</strong> <%= movie.releasedate ?
                movie.releasedate.toISOString().split('T')[0] : 'N/A' %><br />
                <strong>Runtime:</strong> <%= movie.runtime %> mins<br />
                <strong>Budget:</strong> $<%= movie.budget ?
                movie.budget.toLocaleString() : 'N/A' %><br />
                <strong>Revenue:</strong> $<%= movie.revenue ?
                movie.revenue.toLocaleString() : 'N/A' %>
              </p>
            </div>
          </div>
        </div>
        <% }); %>
      </div>

      <div
        id="noResultsMsg"
        class="alert alert-warning text-center mt-4 d-none"
      >
        <i class="bi bi-info-circle-fill me-2"></i>
        This movie "<span id="searchTerm"></span>" is not available, please add
        it first.
      </div>
      <% } else { %>
      <div class="alert alert-warning text-center mt-4">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> No movies found.
      </div>
      <% } %>
    </div>

    <!-- â­ Rating Modal -->
    <div id="ratingModal" class="rating-modal">
      <div class="rating-container">
        <span class="close-btn" onclick="closeRating()">&times;</span>
        <h2 class="rating-title">
          <i class="bi bi-star-fill text-warning"></i> Rate Movies
        </h2>
        <form id="ratingForm" method="POST">
          <input type="hidden" name="mid" id="ratingMid" />
          <div class="star-rating">
            <input type="radio" name="rating" id="star5" value="5" /><label
              for="star5"
              class="bi bi-star-fill"
            ></label>
            <input type="radio" name="rating" id="star4" value="4" /><label
              for="star4"
              class="bi bi-star-fill"
            ></label>
            <input type="radio" name="rating" id="star3" value="3" /><label
              for="star3"
              class="bi bi-star-fill"
            ></label>
            <input type="radio" name="rating" id="star2" value="2" /><label
              for="star2"
              class="bi bi-star-fill"
            ></label>
            <input
              type="radio"
              name="rating"
              id="star1"
              value="1"
              required
            /><label for="star1" class="bi bi-star-fill"></label>
          </div>
          <div class="mb-3">
            <label for="review" class="form-label text-white"
              >Your Review</label
            >
            <textarea
              class="form-control"
              name="review"
              id="review"
              rows="4"
              placeholder="Write your review..."
              required
            ></textarea>
          </div>
          <button type="submit" class="btn btn-submit">
            <i class="bi bi-send-fill me-2"></i>Submit Rating
          </button>
        </form>
      </div>
    </div>

    <script>
      function openRating(mid) {
        const modal = document.getElementById("ratingModal");
        modal.classList.add("show");
        modal.style.display = "flex";
        document.getElementById("ratingMid").value = mid;
        document.getElementById(
          "ratingForm"
        ).action = `/user/submit-rating/${mid}`;
      }

      function closeRating() {
        const modal = document.getElementById("ratingModal");
        modal.classList.remove("show");
        modal.style.display = "none";
        document.getElementById("ratingForm").reset();
        const stars = document.querySelectorAll('input[name="rating"]');
        stars.forEach((star) => (star.checked = false));
        const container = document.querySelector(".rating-container");
        const successMsg = container.querySelector(".alert-success");
        if (successMsg) successMsg.remove();
      }

      document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("searchInput");
        const searchFilter = document.getElementById("searchFilter");
        const movieCards = document.querySelectorAll(
          "#movieContainer .movie-wrapper"
        );
        const noResultsMsg = document.getElementById("noResultsMsg");
        const searchTermSpan = document.getElementById("searchTerm");

        searchInput.addEventListener("input", function () {
          const keyword = this.value.trim().toLowerCase();
          const filter = searchFilter.value;
          let matchFound = false;

          movieCards.forEach(function (card) {
            let text = "";
            if (filter === "title") {
              text = card
                .querySelector(".movie-title")
                ?.textContent.toLowerCase();
            } else if (filter === "genre") {
              text = card
                .querySelector(".movie-meta:nth-of-type(2)")
                ?.textContent.toLowerCase();
            } else if (filter === "language") {
              text = card
                .querySelector(".movie-meta:nth-of-type(3)")
                ?.textContent.toLowerCase();
            } else if (filter === "director") {
              text = card
                .querySelector(".movie-meta:nth-of-type(5)")
                ?.textContent.toLowerCase();
            }

            if (text.includes(keyword)) {
              card.style.display = "block";
              matchFound = true;
            } else {
              card.style.display = "none";
            }
          });

          if (!matchFound && keyword !== "") {
            searchTermSpan.textContent = this.value;
            noResultsMsg.classList.remove("d-none");
          } else {
            noResultsMsg.classList.add("d-none");
          }
        });

        const urlParams = new URLSearchParams(window.location.search);
        const success = urlParams.get("success");
        const mid = urlParams.get("mid");

        if (success && mid) {
          openRating(mid);
          const container = document.querySelector(".rating-container");
          const oldMsg = container.querySelector(".alert-success");
          if (oldMsg) oldMsg.remove();
          const message = document.createElement("div");
          message.className = "alert alert-success mt-2";
          message.innerHTML =
            "<i class='bi bi-check-circle-fill'></i> Review submitted successfully!";
          container.insertBefore(message, container.firstChild);
        }

        if (window.history.replaceState) {
          const url =
            window.location.protocol +
            "//" +
            window.location.host +
            window.location.pathname;
          window.history.replaceState({}, document.title, url);
        }
      });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
