<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Profile</title>

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Custom Styles -->
  <style>
    .profile-card {
      border-radius: 20px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
      padding: 30px;
      background: linear-gradient(135deg, #f8f9fa, #ffffff);
    }
    th {
      width: 200px;
    }
    .table td, .table th {
      vertical-align: middle;
    }
  </style>
</head>

<body>
  <div class="container mt-5">
    <!-- Profile Card -->
    <div class="profile-card">
      <!-- Title -->
      <h2 class="text-primary mb-4 text-center">
        <i class="bi bi-person-lines-fill me-2 text-success"></i> User Profile
      </h2>
      <!-- Profile Table -->
      <table class="table table-bordered table-striped rounded">
        <tbody>
          <tr>
            <th scope="row"><i class="bi bi-person"></i> Username</th>
            <td><%= user.uname %></td>
          </tr>
          <tr>
            <th scope="row"><i class="bi bi-envelope-fill"></i> Email</th>
            <td><%= user.email %></td>
          </tr>
         
          <tr>
            <th scope="row"><i class="bi bi-person-badge-fill"></i> Role</th>
            <td><%= user.role %></td>
          </tr>
          <tr>
            <th scope="row"><i class="bi bi-calendar-check"></i> Created At</th>
            <td><%= new Date(user.created_at).toLocaleString() %></td>
          </tr>
          <tr>
            <th scope="row"><i class="bi bi-clock-history"></i> Updated At</th>
            <td><%= new Date(user.updated_at).toLocaleString() %></td>
          </tr>
        </tbody>
      </table>

      <!-- Back Button -->
      <div class="text-center mt-4">
        <a href="/user/profile/edit" class="btn btn-warning">
          <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a href="/user" class="btn btn-outline-success rounded-pill px-4">
          <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
      </div>
    </div>
  </div>
  <!-- Bootstrap Script -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
