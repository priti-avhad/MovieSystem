<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - Movie Recommendation System</title>

    <!-- Bootstrap & Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
      body {
        background: linear-gradient(to right, #f8f9fa, #e9ecef);
        font-family: "Segoe UI", sans-serif;
      }

      .main-content {
        padding-top: 60px;
        flex: 1;
        display: flex;
      }

      .sidebar {
        width: 250px;
        background: #0d1117;
        color: white;
        min-height: calc(100vh - 70px - 60px);
      }

      .sidebar h5 {
        padding-bottom: 10px;
        border-bottom: 1px solid #444;
      }

      .sidebar .nav-link {
        color: #ccc;
        padding: 10px;
        border-radius: 5px;
      }

      .sidebar .nav-link:hover,
      .sidebar .nav-link:focus {
        background-color: #1f6feb;
        color: white;
      }

      .dashboard {
        background: transparent;
        padding: 20px;
        flex-grow: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 70px - 60px);
      }

      .dashboard-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
        padding: 40px;
        max-width: 600px;
        width: 100%;
        text-align: center;
      }

      footer {
        background-color: #0d1117;
        color: white;
        text-align: center;
        padding: 1rem 0;
      }

      .navbar-brand span {
        font-weight: bold;
        color: #ffc107;
      }

      .navbar .nav-link {
        color: #f8f9fa !important;
        font-size: 0.9rem;
      }

      .btn-outline-light:hover {
        background-color: #ffc107;
        color: #000;
      }

      h1 i {
        animation: floatIcon 1.2s ease-in-out infinite alternate;
      }

      @keyframes floatIcon {
        from {
          transform: translateY(0);
        }
        to {
          transform: translateY(-5px);
        }
      }
    </style>
  </head>
  <body class="d-flex flex-column min-vh-100">
    <!-- Navbar -->
    <nav
      class="navbar navbar-expand-lg navbar-dark bg-dark py-2 fixed-top shadow"
    >
      <div class="container-fluid">
        <a class="navbar-brand fw-bold fs-4" href="/admin">
          <i class="bi bi-film text-warning"></i> <span>Admin Panel</span>
        </a>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Sidebar -->
      <div class="sidebar p-3 shadow-sm">
        <div class="text-center mb-3">
          <img
            src="https://cdn-icons-png.flaticon.com/512/149/149071.png"
            alt="Profile Image"
            class="rounded-circle mb-2"
            width="80"
            height="80"
          />
          <h6 class="text-white mb-0">Admin</h6>
          <small class="text-muted">Administrator</small>
        </div>

        <h5 class="mt-4">
          <i class="bi bi-sliders2-vertical me-2 text-info"></i> Admin Menu
        </h5>
        <ul class="nav flex-column">
          <!-- Movies Menu -->
          <li class="nav-item">
            <a
              class="nav-link d-flex justify-content-between align-items-center w-100"
              data-bs-toggle="collapse"
              href="#movieMenu"
              role="button"
              aria-expanded="false"
              aria-controls="movieMenu"
            >
              <span
                ><i class="bi bi-camera-reels me-1 text-warning"></i>
                Movies</span
              >
              <i class="bi bi-caret-down-fill text-light"></i>
            </a>
            <div class="collapse" id="movieMenu">
              <ul class="nav flex-column ms-3">
                <li class="nav-item">
                  <a class="nav-link small" href="/admin/movies/add-movie">
                    <i class="bi bi-plus-circle me-1 text-danger"></i> Add Movie
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link small" href="/admin/movies/viewmovies">
                    <i class="bi bi-eye me-1 text-success"></i> View Movies
                  </a>
                </li>
              </ul>
            </div>
          </li>

          <!-- Other Items -->
          <li class="nav-item">
            <a class="nav-link" href="/AdminUserViews">
              <i class="bi bi-person-circle me-1 text-success"></i> Users
            </a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/ratings">
              <i class="bi bi-star-fill me-1 text-warning"></i> Ratings
            </a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="#"
              ><i class="bi bi-person-badge-fill me-1 text-primary"></i>
              Profile</a
            >
          </li>

          <div class="d-flex justify-content-start my-3 ms-3">
            <a href="/logout" class="btn btn-sm btn-danger shadow-sm">
              <i class="bi bi-box-arrow-right me-1 text-light"></i>Logout
            </a>
          </div>
        </ul>
      </div>

      <!-- Dashboard Content -->
      <div class="dashboard">
          <% if (typeof main_content !== 'undefined') { %> <%-
          include(main_content, { msg: typeof msg !== 'undefined' ? msg : null,
          successMessage: typeof successMessage !== 'undefined' ? successMessage :
          null }) %> <% } else { %>
        <div class="dashboard-card animate__animated animate__fadeIn">
          <h1 class="text-dark fw-bold mb-3" style="font-size: 2.5rem">
            <i
              class="bi bi-speedometer2 me-2 text-primary"
              style="font-size: 3rem"
            ></i>
            Welcome to Admin Dashboard
          </h1>
          <p class="text-muted fs-5">
            Hello, <span class="text-success fw-semibold">Admin</span>! Manage
            your movies and users here.
          </p>
        </div>
        <% } %>
      </div>
    </div>

    <!-- Footer -->
    <footer class="mt-auto">
      <div class="container">
        <p class="mb-0">Â© 2025 Movie Recommendation System | Admin Panel</p>
      </div>
    </footer>

    <!-- Bootstrap Bundle (required for collapse) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
