<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Panel - Movie Recommendation System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
  <style>
    body {
      background: linear-gradient(to right, #f8f9fa, #e9ecef);
      font-family: 'Segoe UI', sans-serif;
    }

    .main-content {
      display: flex;
      flex-grow: 1;
      padding-top: 60px;
    }

    .sidebar {
      width: 250px;
      background: #0d1117;
      color: white;
      min-height: calc(100vh - 70px);
      transition: all 0.3s ease;
    }

    .sidebar .nav-link {
      color: #ccc;
      padding: 10px;
      border-radius: 5px;
    }

    .sidebar .nav-link:hover,
    .sidebar .nav-link:focus {
      background-color: #1f6feb;
      color: white;
    }

    .dashboard {
      flex-grow: 1;
      background: linear-gradient(to bottom right, #f1f3f5, #ffffff);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: calc(100vh - 70px - 60px);
      padding: 2rem;
      border-left: 1px solid #dee2e6;
    }

    .dashboard-card {
      background: #ffffff;
      padding: 2rem;
      border-radius: 20px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    footer {
      background-color: #0d1117;
      color: white;
      text-align: center;
      padding: 1rem 0;
    }

    .navbar-brand span {
      font-weight: bold;
      color: #ffc107;
    }

    .btn-outline-light:hover {
      background-color: #ffc107;
      color: #000;
    }

    h1 i {
      animation: floatIcon 1.2s ease-in-out infinite alternate;
    }

    @keyframes floatIcon {
      from { transform: translateY(0); }
      to   { transform: translateY(-5px); }
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark py-2 fixed-top shadow">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold fs-4" href="/users">
      <i class="bi bi-film text-warning"></i> <span>User Panel</span>
    </a>
    <form class="d-flex me-3 ms-auto" role="search" action="/user/search" method="get">
      <input class="form-control form-control-sm me-2" type="search" name="q" placeholder="Search movies..." aria-label="Search">
      <button class="btn btn-outline-warning btn-sm" type="submit"><i class="bi bi-search"></i></button>
    </form>
  </div>
</nav>

<!-- Main Content -->
<div class="main-content">

  <!-- Sidebar -->
  <div id="sidebar" class="sidebar p-3 shadow-sm">
    <div class="text-center mb-3">
      <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="Profile Image" class="rounded-circle mb-2" width="80" height="80">
      <h6 class="text-white mb-0">User</h6>
      <small class="text-muted">Movie Fan</small>
    </div>

    <h5 class="mt-4"><i class="bi bi-sliders2-vertical me-2 text-info"></i> User Menu</h5>
    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link" href="/user/movies">
          <i class="bi bi-play-circle-fill me-1 text-warning"></i> Movies View
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="/user/recommendations">
          <i class="bi bi-stars me-1 text-success"></i> Recommendations
        </a>
      </li>


      <li class="nav-item">
        <a class="nav-link" href="/user/ratings">
          <i class="bi bi-star-half me-1 text-warning"></i> Ratings and Reviews

      <a class="nav-link" href="/user/history">
  <i class="bi bi-clock-history me-1 text-info"></i> Watch History Movies
</a>


      
      <li class="nav-item">
        <a class="nav-link" href="/user/profile">
          <i class="bi bi-person-lines-fill me-1 text-success"></i> Profile
        </a>
      </li>


      <li class="nav-item">
        <a class="nav-link text-danger" href="logout">
          <i class="bi bi-box-arrow-right me-1"></i> Logout
        </a>
      </li>
    </ul>
  </div>

  <!-- Dashboard Content -->
  <div class="dashboard">
    <div class="container-fluid">
      <% if (typeof viewFile !== 'undefined') { %>
        <%- include(viewFile, { movies }) %>
      <% } else { %>
        <div class="dashboard-card animate__animated animate__fadeIn text-center">
          <% if (typeof msg !== 'undefined' && msg) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <%= msg %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>
          <h1 class="text-dark fw-bold mb-3" style="font-size: 2.5rem;">
            <i class="bi bi-speedometer2 me-2 text-primary" style="font-size: 3rem;"></i> Welcome to User Dashboard
          </h1>
          <p class="text-muted fs-5">
            Hello, <span class="text-success fw-semibold">User</span>! Explore movies, get recommendations, and manage your profile here.
          </p>
        </div>
      <% } %>
    </div>
  </div>
</div>

<!-- Footer -->
<footer class="mt-auto">
  <div class="container">
    <p class="mb-0">Â© 2025 Movie Recommendation System | User Panel</p>
  </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  document.getElementById('toggleSidebarBtn')?.addEventListener('click', function () {
    const sidebar = document.getElementById('sidebar');
    sidebar.classList.toggle('d-none');
  });
</script>

</body>
</html>
