<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Panel - Movie Recommendation System</title>

  <!-- Bootstrap CSS & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

  <style>
    html, body {
      height: 100%;
      margin: 0;
      font-family: "Segoe UI", sans-serif;
      background: linear-gradient(to right, #f8f9fa, #e9ecef);
    }

    .main-content {
      display: flex;
      flex-grow: 1;
      margin-top: 56px; /* navbar height */
      overflow: hidden;
    }

    .sidebar {
      width: 250px;
      background: #0d1117;
      color: white;
      overflow-y: auto;
      height: calc(100vh - 56px);
      flex-shrink: 0;
    }

    .sidebar .nav-link {
      color: #ccc;
      padding: 10px;
      border-radius: 5px;
    }

    .sidebar .nav-link:hover,
    .sidebar .nav-link:focus {
      background-color: #1f6feb;
      color: white;
    }

    .dashboard {
      flex-grow: 1;
      overflow-y: auto;
      background: linear-gradient(to bottom right, #f1f3f5, #ffffff);
      padding: 2rem;
      border-left: 1px solid #dee2e6;
    }

    .dashboard-card {
      background: #ffffff;
      padding: 2rem;
      border-radius: 20px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .navbar-brand span {
      font-weight: bold;
      color: #ffc107;
    }

    .btn-outline-light:hover {
      background-color: #ffc107;
      color: #000;
    }

    h1 i {
      animation: floatIcon 1.2s ease-in-out infinite alternate;
    }

    @keyframes floatIcon {
      from {
        transform: translateY(0);
      }
      to {
        transform: translateY(-5px);
      }
    }

    footer {
      background-color: #0d1117;
      color: #fff;
      text-align: center;
      padding: 1rem 0;
      margin-top: auto;
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-2 fixed-top shadow">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold fs-4 d-flex align-items-center" href="/users">
        <i class="bi bi-film text-warning me-2"></i>
        <span>User Panel</span>
      </a>

      <div class="ms-auto">
        <a href="/logout" class="btn btn-danger fw-semibold">
          <i class="bi bi-box-arrow-right me-1"></i> Logout
        </a>
      </div>
    </div>
  </nav>

  <!-- Main Layout -->
  <div class="main-content">
    <!-- Sidebar -->
    <div id="sidebar" class="sidebar p-3 shadow-sm">
      <div class="text-center mb-3">
        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="Profile" class="rounded-circle mb-2" width="80" height="80"/>
        <h6 class="text-white mb-0">User</h6>
        <small class="text-muted">Movie Fan</small>
      </div>

      <h5 class="mt-4">
        <i class="bi bi-sliders2-vertical me-2 text-info"></i> User Menu
      </h5>
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link" href="/user/movies"><i class="bi bi-play-circle-fill me-1 text-warning"></i> Movies View</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/recommendations"><i class="bi bi-stars me-1 text-success"></i> Recommendations</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/home/user/ratings"><i class="bi bi-star-half me-1 text-warning"></i> Ratings & Reviews</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/history"><i class="bi bi-clock-history me-1 text-info"></i> Watch History</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/profile"><i class="bi bi-person-lines-fill me-1 text-success"></i> Profile</a>
        </li>
      </ul>
    </div>

    <!-- Dashboard -->
    <div class="dashboard mt-5">
      <% if (typeof viewFile !== 'undefined') { %>
        <div class="container-fluid">
          <div class="mx-auto" style="max-width: 1000px;">
            <%- include(viewFile, {
              msg: typeof msg !== 'undefined' ? msg : null,
              successMessage: typeof successMessage !== 'undefined' ? successMessage : null,
              movies: typeof movies !== 'undefined' ? movies : []
            }) %>
          </div>
        </div>
      <% } else { %>
        <div class="dashboard-card animate__animated animate__fadeIn mx-auto shadow bg-white text-center px-4 py-5" 
             style="max-width: 800px; margin-top: 100px;">
          <h1 class="text-dark fw-bold mb-3" style="font-size: 2.5rem;">
            <i class="bi bi-speedometer2 me-2 text-primary" style="font-size: 3rem;"></i>
            Welcome to User Dashboard
          </h1>
          <p class="text-muted fs-5">
            Hello, <span class="text-success fw-semibold">User</span>! Explore movies, get recommendations, and manage your profile here.
          </p>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Footer -->
  <footer>
    <div class="container">
      <small>&copy; <%= new Date().getFullYear() %> Movie Recommendation System. All rights reserved.</small>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
