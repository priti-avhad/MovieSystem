<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Management</title>

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background-color: #f8fafc;
      overflow-x: hidden;
    }

    /* Animations */
    @keyframes slideDownFade {
      0% {
        transform: translateY(-40px);
        opacity: 0;
      }
      100% {
        transform: translateY(0);
        opacity: 1;
      }
    }

    @keyframes fadeUp {
      0% {
        transform: translateY(40px);
        opacity: 0;
      }
      100% {
        transform: translateY(0);
        opacity: 1;
      }
    }

    .gradient-header {
      background: linear-gradient(to right, #6a11cb, #2575fc);
      color: white;
      padding: 30px;
      border-radius: 20px;
      text-align: center;
      margin-bottom: 30px;
      animation: slideDownFade 1s ease forwards;
      animation-delay: 0.1s;
      box-shadow: 0 6px 16px rgba(0, 0, 0, 0.2);
      opacity: 0;
    }

    .alert {
      animation: fadeUp 0.8s ease-in-out;
    }

    .table-container {
      animation: fadeUp 1s ease-in-out 0.4s forwards;
      opacity: 0;
    }

    .table th {
      background-color: #dbeafe !important;
      color: #000;
      vertical-align: middle;
    }

    .table td {
      vertical-align: middle;
    }

    .btn-info {
      background-color: #06b6d4;
      border: none;
    }

    .btn-danger {
      background-color: #ef4444;
      border: none;
    }

    .btn i {
      margin-right: 5px;
    }
  </style>
</head>

<body class="bg-light">

  <div class="container mt-4">

    <!-- Animated Gradient Header -->
    <div class="gradient-header">
      <h4><i class="bi bi-people-fill me-2"></i> User Management</h4>
      <p>Manage all registered users with actions</p>
    </div>

    <!-- Success Message -->
    <% if (successMessage) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= successMessage %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <!-- Animated Table -->
    <div class="table-responsive table-container">
      <table class="table table-bordered table-hover bg-white text-center shadow-sm rounded">
        <thead>
          <tr>
            <th>Sr.No</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((user, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= user.uname || 'N/A' %></td>
              <td><%= user.email || 'N/A' %></td>
              <td><%= user.role || 'N/A' %></td>
              <td>
                <div class="d-flex justify-content-center gap-2 flex-wrap">
                  <a href="/user/view/<%= user.uid %>" class="btn btn-sm btn-info">
                    <i class="bi bi-eye-fill"></i> View
                  </a>
                  <form action="/users/delete/<%= user.uid %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
                    <button type="submit" class="btn btn-danger btn-sm">
                      <i class="bi bi-trash3-fill"></i> Delete 
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
