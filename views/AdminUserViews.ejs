<!DOCTYPE html>
<html lang="en">
<head>
  <title>User Management</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

  <!-- Custom Styles -->
  <style>
    body {
      background: #f3f4f6;
      font-family: 'Segoe UI', sans-serif;
    }

    /* Header Glassmorphism */
    .gradient-header {
      background: rgba(99, 102, 241, 0.7);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 30px 20px;
      color: white;
      text-align: center;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
      margin-bottom: 30px;
      animation: slideFade 0.6s ease-in-out;
    }

    /* Fade-in Slide */
    @keyframes slideFade {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Table Card */
    .card-custom {
      border-radius: 16px;
      background: white;
      padding: 20px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
      animation: slideFade 0.7s ease;
    }

    .table th {
      background-color: #dbeafe;
      color: #111827;
      vertical-align: middle;
    }

    .table td {
      vertical-align: middle;
    }

    /* Buttons */
    .btn-sm {
      transition: 0.3s;
    }

    .btn-info {
      background-color: #0ea5e9;
      color: white;
    }

    .btn-success {
      background-color: #22c55e;
      color: white;
    }

    .btn-secondary {
      background-color: #6b7280;
      color: white;
    }

    .btn:hover {
      transform: scale(1.05);
    }

    .btn i {
      margin-right: 4px;
    }

    /* Role Badge */
    .badge-role {
      padding: 6px 12px;
      font-size: 0.85rem;
      border-radius: 50px;
      background-color: #e0f2fe;
      color: #0369a1;
    }

    /* Responsive */
    @media (max-width: 576px) {
      .gradient-header h4 {
        font-size: 1.25rem;
      }
    }
  </style>
</head>

<body>

  <div class="container py-4">

    <!-- ðŸ”· Gradient Header -->
    <div class="gradient-header">
      <h4><i class="bi bi-people-fill me-2"></i> User Management</h4>
      <p class="mb-0">Explore and manage user accounts with ease.</p>
    </div>

    <!-- ðŸ”˜ User Table -->
    <div class="card-custom">
      <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center">
          <thead>
            <tr>
              <th>Sr.No</th>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((user, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= user.uname || 'N/A' %></td>
                <td><%= user.email || 'N/A' %></td>
                <td><span class="badge-role"><%= user.role || 'N/A' %></span></td>
                <td>
                  <div class="d-flex justify-content-center flex-wrap gap-2">
                    <a href="/admin/user/view/<%= user.uid %>" class="btn btn-sm btn-info">
                      <i class="bi bi-eye-fill"></i> View
                    </a>
                    <a href="/admin/user/enable/<%= user.uid %>" class="btn btn-sm btn-success">
                      <i class="bi bi-check-circle-fill"></i> Enable
                    </a>
                    <a href="/admin/user/disable/<%= user.uid %>" class="btn btn-sm btn-secondary"
                       onclick="return confirm('Are you sure you want to disable this user?')">
                      <i class="bi bi-x-circle-fill"></i> Disable
                    </a>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

  </div>

</body>
</html>
