<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add New Movie</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      width: 100%;
      height: 100%;
      background-color: #e9ecef;
      font-family: 'Segoe UI', sans-serif;
      overflow-x: hidden;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    body::-webkit-scrollbar {
      display: none;
    }

    .form-container {
      max-width: 1100px;
      max-height: 85vh;
      overflow-y: auto;
      margin: 40px auto;
      padding: 20px;
      background-color: #ffffff;
      border-radius: 12px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.08);
    }

    .form-container::-webkit-scrollbar {
      display: none;
    }

    .section-heading {
      background-color: #212529;
      color: #ffffff;
      padding: 8px 12px;
      border-radius: 8px;
      margin-bottom: 16px;
      font-weight: 600;
      font-size: 16px;
    }

    label {
      font-weight: 500;
      font-size: 14px;
    }

    input, textarea, select {
      font-size: 14px !important;
    }

    .btn-submit {
      font-size: 14px;
      font-weight: 600;
      padding: 8px 24px;
    }

    @media (max-width: 576px) {
      .form-container {
        padding: 15px 10px;
      }

      .section-heading {
        font-size: 14px;
      }

      label, input, textarea, select {
        font-size: 13px !important;
      }

      .btn-submit {
        font-size: 13px;
        padding: 6px 18px;
      }
    }
  </style>
</head>
<body>

  <form action="/admin/movies/add-movie" method="POST" enctype="multipart/form-data">
    <div class="container form-container">
      <h5 class="text-center mb-3">
        <i class="bi bi-camera-reels-fill text-danger me-2"></i>Add New Movie
      </h5>

      <div class="row g-3">
        <!-- Column 1 -->
        <div class="col-md-4">
          <label for="title"><i class="bi bi-film text-primary me-1"></i>Title</label>
          <input type="text" id="title" name="title" class="form-control" required>

          <label for="release_date" class="mt-2"><i class="bi bi-calendar-event text-primary me-1"></i>Release Date</label>
          <input type="date" id="release_date" name="release_date" class="form-control" required>

          <label for="budget" class="mt-2"><i class="bi bi-cash-coin text-primary me-1"></i>Budget</label>
          <input type="number" id="budget" name="budget" class="form-control" required>

          <label for="runtime" class="mt-2"><i class="bi bi-clock-history text-primary me-1"></i>Runtime (min)</label>
          <input type="number" id="runtime" name="runtime" class="form-control" required>
            <label for="director"><i class="bi bi-person-video3 text-primary me-1"></i>Director</label>
          <input type="text" id="director" name="director" class="form-control" required>
        </div>

        <!-- Column 2 -->
        <div class="col-md-4">
          <label for="description"><i class="bi bi-card-text text-primary me-1"></i>Description</label>
          <textarea id="description" name="description" class="form-control" rows="5" required></textarea>

          <label for="genre" class="mt-2"><i class="bi bi-tags text-primary me-1"></i>Genre</label>
          <select id="genre" name="genre" class="form-select" required>
            <option disabled selected>Select Genre</option>
            <option value="Hollywood">Hollywood</option>
            <option value="Bollywood">Bollywood</option>
            <option value="Historical">Historical</option>
            <option value="Comedy">Comedy</option>
          </select>

          <label for="language" class="mt-2"><i class="bi bi-translate text-primary me-1"></i>Language</label>
          <input type="text" id="language" name="language" class="form-control" required>
        </div>

        <!-- Column 3 -->
        <div class="col-md-4">
        

          <label for="poster" class="mt-2"><i class="bi bi-image text-primary me-1"></i>Poster Image</label>
          <input type="file" id="poster" name="poster" class="form-control" accept="image/*" required>

          <label for="revenue" class="mt-2"><i class="bi bi-graph-up-arrow text-primary me-1"></i>Revenue</label>
          <input type="number" id="revenue" name="revenue" class="form-control" required>

          <label for="country" class="mt-2"><i class="bi bi-globe text-primary me-1"></i>Country</label>
          <input type="text" id="country" name="country" class="form-control" required>

          <label for="trailer_url" class="mt-2"><i class="bi bi-link-45deg text-primary me-1"></i>Trailer URL</label>
          <input type="url" id="trailer_url" name="trailer_url" class="form-control" required>

          <label for="movie_url" class="mt-2"><i class="bi bi-link text-primary me-1"></i>Movie URL</label>
          <input type="url" id="movie_url" name="movie_url" class="form-control" required>
        </div>
      </div>

      <div class="text-center mt-4">
        <button type="submit" class="btn btn-success btn-submit">
          <i class="bi bi-check-circle-fill text-white me-1"></i>Save
        </button>
      </div>
    </div>

    <% if (typeof msg !== 'undefined') { %>
    <div class="alert alert-success alert-dismissible fade show text-center m-3"id="success-msg" role="alert">
      <strong><i class="bi bi-check-circle-fill me-1"></i><%= msg %></strong>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
  </form>
  <script>
    window.addEventListener('DOMContentLoaded', () => {
    setTimeout(() => {
      const msg = document.getElementById('success-msg');
      if (msg) {
        msg.style.display = 'none';
      }
    }, 3000); // 3000ms = 3 seconds
  });
  </script>
</body>
</html>
