<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Register Movie</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(to right, #000000, #434343);
      font-family: 'Segoe UI', sans-serif;
    }

    .form-container {
      max-width: 720px;
      margin: 50px auto;
      background: #ffffff;
      padding: 30px;
      border-radius: 20px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
    }

    h2 {
      font-size: 2rem;
      margin-bottom: 25px;
      color: #000;
      font-weight: 700;
      text-align: center;
    }

    .form-label {
      font-weight: 600;
      color: #333;
    }

    .form-control:focus, .form-select:focus {
      box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.3);
    }

    .poster-preview {
      max-width: 100px;
      max-height: 100px;
      margin-top: 10px;
      border: 1px solid #ccc;
      border-radius: 6px;
    }

    .btn-success {
      font-weight: 600;
      font-size: 1rem;
      padding: 12px;
      border-radius: 8px;
      background: linear-gradient(to right, #06d6a0, #1b9c85);
      border: none;
      transition: 0.3s ease-in-out;
    }

    .btn-success:hover {
      background: linear-gradient(to right, #1b9c85, #06d6a0);
    }

    .form-icon {
      margin-right: 8px;
      font-size: 1.2rem;
    }

    /* Icon Colors */
    .icon-title { color: #e63946; }
    .icon-desc { color: #ffb703; }
    .icon-date { color: #219ebc; }
    .icon-genre { color: #38b000; }
    .icon-director { color: #8338ec; }
    .icon-language { color: #3a86ff; }
    .icon-country { color: #ff006e; }
    .icon-budget { color: #06d6a0; }
    .icon-revenue { color: #b08968; }
    .icon-runtime { color: #fb5607; }
    .icon-poster { color: #9d4edd; }
    .icon-trailer { color: #118ab2; }

    input:focus, textarea:focus, select:focus {
      border: 2px solid #000000;
    }
  </style>
</head>
<body>

<div class="container form-container">
  <h2><i class="bi bi-film form-icon icon-title"></i>Register Movie</h2>
  <form id="movieForm" enctype="multipart/form-data">

    <div class="mb-3">
      <label for="title" class="form-label"><i class="bi bi-card-text form-icon icon-title"></i>Title</label>
      <input type="text" class="form-control" id="title" name="title" required>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label"><i class="bi bi-pencil-square form-icon icon-desc"></i>Description</label>
      <textarea class="form-control" id="description" name="description" rows="2" required></textarea>
    </div>

    <div class="mb-3">
      <label for="release_date" class="form-label"><i class="bi bi-calendar-event form-icon icon-date"></i>Release Date</label>
      <input type="date" class="form-control" id="release_date" name="release_date" required>
    </div>

    <div class="mb-3">
      <label for="genre" class="form-label"><i class="bi bi-tags form-icon icon-genre"></i>Genre</label>
      <select class="form-select" id="genre" name="genre" required>
        <option selected disabled>Select genre</option>
        <option value="action">Action</option>
        <option value="comedy">Comedy</option>
        <option value="drama">Drama</option>
        <option value="sci-fi">Sci-Fi</option>
      </select>
    </div>

    <div class="row mb-3">
      <div class="col-md-4">
        <label for="director" class="form-label"><i class="bi bi-person-video2 form-icon icon-director"></i>Director</label>
        <input type="text" class="form-control" id="director" name="director" required>
      </div>
      <div class="col-md-4">
        <label for="language" class="form-label"><i class="bi bi-translate form-icon icon-language"></i>Language</label>
        <input type="text" class="form-control" id="language" name="language" required>
      </div>
      <div class="col-md-4">
        <label for="country" class="form-label"><i class="bi bi-geo-alt form-icon icon-country"></i>Country</label>
        <input type="text" class="form-control" id="country" name="country" required>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-4">
        <label for="budget" class="form-label"><i class="bi bi-currency-dollar form-icon icon-budget"></i>Budget</label>
        <input type="number" class="form-control" id="budget" name="budget" required>
      </div>
      <div class="col-md-4">
        <label for="revenue" class="form-label"><i class="bi bi-cash-coin form-icon icon-revenue"></i>Revenue</label>
        <input type="number" class="form-control" id="revenue" name="revenue" required>
      </div>
      <div class="col-md-4">
        <label for="runtime" class="form-label"><i class="bi bi-clock form-icon icon-runtime"></i>Runtime (min)</label>
        <input type="number" class="form-control" id="runtime" name="runtime" required>
      </div>
    </div>

    <div class="mb-3">
      <label for="poster" class="form-label"><i class="bi bi-image form-icon icon-poster"></i>Poster</label>
      <input type="file" class="form-control" id="poster" name="poster" accept="image/*" onchange="previewPoster()" required>
      <img id="posterPreview" class="poster-preview" src="#" alt="Image Preview" style="display: none;">
    </div>

    <div class="mb-3">
      <label for="trailer_url" class="form-label"><i class="bi bi-link-45deg form-icon icon-trailer"></i>Trailer URL</label>
      <input type="url" class="form-control" id="trailer_url" name="trailer_url" required>
    </div>

    <button type="submit" class="btn btn-success w-100"><i class="bi bi-check-circle-fill"></i> Save Movie</button>
  </form>
</div>

<script>
  function previewPoster() {
    const input = document.getElementById('poster');
    const preview = document.getElementById('posterPreview');
    if (input.files && input.files[0]) {
      const reader = new FileReader();
      reader.onload = function(e) {
        preview.src = e.target.result;
        preview.style.display = 'block';
      }
      reader.readAsDataURL(input.files[0]);
    }
  }
</script>

</body>
</html>
